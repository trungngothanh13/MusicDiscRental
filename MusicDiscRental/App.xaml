             xmlns:local="clr-namespace:MusicDiscRental"
             xmlns:converters="clr-namespace:MusicDiscRental.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToAvailabilityConverter x:Key="BoolToAvailabilityConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BoolToRentalStatusColorConverter x:Key="BoolToRentalStatusColorConverter"/>
    </Application.Resources>
</Application>