<UserControl x:Class="MusicDiscRental.Views.RentalDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicDiscRental.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Rental Dashboard" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Rental Controls -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Member Selection -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Select Member" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Members}" 
                          SelectedItem="{Binding SelectedMember}"
                          DisplayMemberPath="Name"
                          Padding="8"
                          IsEditable="False"/>
            </StackPanel>

            <!-- Disc Selection -->
            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                <TextBlock Text="Select Disc" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding AvailableDiscs}" 
                          SelectedItem="{Binding SelectedDisc}"
                          DisplayMemberPath="Title"
                          Padding="8"
                          IsEditable="False"/>
            </StackPanel>

            <!-- Rent Button -->
            <Button Grid.Column="2" 
                    Content="Rent Disc" 
                    Command="{Binding RentDiscCommand}" 
                    Padding="15,8" 
                    Margin="0,20,5,0" 
                    Background="#2ECC71" 
                    Foreground="White" 
                    BorderThickness="0"/>

            <!-- Return Button -->
            <Button Grid.Column="3" 
                    Content="Return Selected" 
                    Command="{Binding ReturnDiscCommand}" 
                    Padding="15,8" 
                    Margin="5,20,0,0" 
                    Background="#E74C3C" 
                    Foreground="White" 
                    BorderThickness="0"/>
        </Grid>

        <!-- Rentals List -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filter Toggle -->
            <CheckBox Grid.Row="0" 
                      Content="Show Only Active Rentals" 
                      IsChecked="{Binding ShowOnlyActive}"
                      Margin="0,0,0,10"/>

            <!-- Rentals DataGrid -->
            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding Rentals}" 
                      SelectedItem="{Binding SelectedRental}" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      BorderThickness="1"
                      BorderBrush="#DDDDDD"
                      Background="White"
                      RowBackground="White"
                      AlternatingRowBackground="#F5F5F5"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding RentalId}" Width="50"/>
                    <DataGridTextColumn Header="Member" Binding="{Binding Member.Name}" Width="*"/>
                    <DataGridTextColumn Header="Disc" Binding="{Binding Disc.Title}" Width="*"/>
                    <DataGridTextColumn Header="Artist" Binding="{Binding Disc.Artist}" Width="*"/>
                    <DataGridTextColumn Header="Rental Date" Binding="{Binding RentalDate, StringFormat=\{0:MM/dd/yyyy\}}" Width="100"/>
                    <DataGridTextColumn Header="Return Date" Binding="{Binding ReturnDate, StringFormat=\{0:MM/dd/yyyy\}}" Width="100"/>

                    <DataGridTemplateColumn Header="Status" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Status}"
                                           Foreground="{Binding IsReturned, Converter={StaticResource BoolToRentalStatusColorConverter}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="#ECF0F1" 
                Padding="10"
                Margin="0,15,0,0">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="#7F8C8D"/>
        </Border>
    </Grid>
</UserControl>