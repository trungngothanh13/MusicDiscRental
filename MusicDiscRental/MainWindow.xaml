<Window x:Class="MusicDiscRental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicDiscRental"
        xmlns:viewModels="clr-namespace:MusicDiscRental.ViewModels"
        xmlns:views="clr-namespace:MusicDiscRental.Views"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:DiscViewModel}">
            <views:DiscsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:RentalViewModel}">
            <views:RentalDashboardView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Navigation -->
        <Border Grid.Row="0" 
                Background="#2C3E50" 
                Padding="15">
            <StackPanel>
                <TextBlock Text="Music Disc Rental System" 
                         FontSize="22" 
                         Foreground="White" 
                         FontWeight="Bold" 
                         Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Rental Dashboard" 
                            Command="{Binding ShowRentalsCommand}" 
                            Width="150" 
                            Height="30" 
                            Margin="0,0,10,0"
                            Background="#3498DB"
                            Foreground="White"
                            BorderThickness="0"/>

                    <Button Content="Manage Discs" 
                            Command="{Binding ShowDiscsCommand}" 
                            Width="150" 
                            Height="30"
                            Background="#3498DB"
                            Foreground="White"
                            BorderThickness="0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <ContentControl Grid.Row="1" 
                        Content="{Binding CurrentViewModel}" 
                        Margin="20"/>

        <!-- Footer -->
        <Border Grid.Row="2" 
        Background="#ECF0F1" 
        Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                  Text="© 2025 Music Disc Rental System" 
                  HorizontalAlignment="Left" 
                  Foreground="#7F8C8D"/>

                <TextBlock Grid.Column="1"
                  Text="{Binding ConnectionStatus}" 
                  HorizontalAlignment="Right" 
                  Foreground="#2980B9"
                  FontWeight="SemiBold"/>
            </Grid>
        </Border>
    </Grid>
</Window>